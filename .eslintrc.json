{
  "extends": ["eslint:recommended", "plugin:mocha/recommended", "airbnb"],
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "node": true,
    "mocha": true,
    "angular/angular": true,
    "angular/mocks": true,
    "angular/protractor": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": [2, "as-needed"],
    "eqeqeq": 2,
    "no-console": 1,
    "no-undef-init": 2,
    "no-undefined": 2,
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "none"
    }],
    "global-require": "off",
    "no-bitwise": "off",
    "no-use-before-define": "off",
    "no-useless-constructor": 2,
    "semi": [2, "always"],
    "comma-dangle": ["error", "always-multiline"]
  },
  "globals": {
    "assert": false,
    "expect": false,
    "should": false,
    "sinon": false,
    "Promise": false,
    "ES6Promise": false
  },
  "plugins": ["chai-expect", "mocha", "angular"]
}
